{
  "// NOTE": "These are recommended optimizations for your angular.json file",
  "// USAGE": "Merge these settings into your existing angular.json configuration",
  
  "projects": {
    "your-project-name": {
      "architect": {
        "storybook": {
          "builder": "@storybook/angular:start-storybook",
          "options": {
            "configDir": ".storybook",
            "browserTarget": "your-project-name:build:production",
            "compodoc": false,
            "port": 6006,
            "host": "localhost",
            "quiet": false,
            "ci": false,
            "smokeTest": false,
            "disableTelemetry": true
          },
          "configurations": {
            "ci": {
              "quiet": true,
              "ci": true,
              "smokeTest": true
            }
          }
        },
        
        "build-storybook": {
          "builder": "@storybook/angular:build-storybook",
          "options": {
            "configDir": ".storybook",
            "browserTarget": "your-project-name:build:production",
            "compodoc": false,
            "outputDir": "storybook-static",
            "quiet": false,
            "disableTelemetry": true,
            "loglevel": "info"
          },
          "configurations": {
            "production": {
              "quiet": true,
              "loglevel": "warn",
              "outputHashing": "all"
            },
            "ci": {
              "quiet": true,
              "loglevel": "error"
            }
          }
        },
        
        "build": {
          "builder": "@angular/build:application",
          "options": {
            "// OPTIMIZATION_NOTES": [
              "These build optimizations help with large Storybook projects",
              "Adjust memory limits and chunk sizes based on your project size"
            ],
            
            "optimization": {
              "scripts": true,
              "styles": true,
              "fonts": true
            },
            
            "budgets": [
              {
                "type": "initial",
                "maximumWarning": "2MB",
                "maximumError": "5MB"
              },
              {
                "type": "anyComponentStyle",
                "maximumWarning": "6kB",
                "maximumError": "10kB"
              }
            ],
            
            "namedChunks": true,
            "extractLicenses": false,
            "sourceMap": {
              "scripts": false,
              "styles": false,
              "vendor": false
            }
          },
          
          "configurations": {
            "production": {
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "namedChunks": false,
              "extractLicenses": true,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "1MB",
                  "maximumError": "2MB"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "4kB",
                  "maximumError": "8kB"
                }
              ]
            },
            
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true,
              "namedChunks": true
            }
          }
        }
      }
    }
  },
  
  "// GLOBAL_CLI_OPTIONS": {
    "cli": {
      "analytics": false,
      "cache": {
        "enabled": true,
        "path": ".angular/cache",
        "environment": "all"
      }
    }
  },
  
  "// TYPESCRIPT_OPTIMIZATIONS": {
    "note": "Add these to your tsconfig.json for better performance",
    "compilerOptions": {
      "skipLibCheck": true,
      "skipDefaultLibCheck": true,
      "incremental": true,
      "tsBuildInfoFile": ".angular/cache/.tsbuildinfo"
    }
  },
  
  "// ENVIRONMENT_VARIABLES": {
    "note": "Set these environment variables for optimal builds",
    "NODE_OPTIONS": "--max-old-space-size=8192",
    "NG_BUILD_CACHE": "true",
    "NG_PERSISTENT_BUILD_CACHE": "true"
  }
}